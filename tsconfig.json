{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "declaration": true,
        "target": "es2016",
        "lib": [
            "es2021.string",
            "es2018",
            "es2017.object",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": false,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        // "rootDir": "src",
        "rootDirs": [
            "src",
            "calc-src"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "noUnusedLocals": false,
        "incremental": true
    },
    "exclude": [
        "src/stdlib/metacircular-interpreter",
        "src/stdlib/**/*.js",
        "node_modules",
        "dist",
        "sicp_publish",
        "calc-src"
    ],
    "types": [
        "typePatches",
        "jest"
    ]
}